<Window x:Class="Fabolus.Wpf.SplashScreen.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fabolus.Wpf.SplashScreen"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Title="SplashScreenWindow" Height="605" Width="540">
    <Border CornerRadius="12" BorderBrush="White" BorderThickness="5">
        <Border.Background>
            <ImageBrush ImageSource="/SplashScreen/SplashImage.png" Stretch="Fill"/>
        </Border.Background>
    </Border>
</Window>
