<UserControl x:Class="Fabolus.Wpf.Pages.Split.SplitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fabolus.Wpf.Pages.Split"
             mc:Ignorable="d" 
             d:DesignWidth="200">
    <StackPanel Orientation="Vertical">
        <Label Content="smoothness degree" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            FontSize="12" 
                            FontWeight="Bold"
                            FontFamily="\Fonts\#Poppins"/>
        <Slider Value="{Binding SmoothnessDegree, Mode=TwoWay}"
                            Minimum="5" Maximum="45" 
                            TickFrequency="5" 
                            TickPlacement="TopLeft" 
                            AutoToolTipPlacement="TopLeft"
                            IsSnapToTickEnabled="True" 
                            Height="30"/>
        <Button Content="export models" 
                Style="{DynamicResource MahApps.Styles.Button.Square}"
                Height="30"
                HorizontalAlignment="Stretch"
                FontSize="14" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"
                Command="{Binding ExportSplitsCommand}" />
    </StackPanel>
</UserControl>
