<UserControl x:Class="Fabolus.Wpf.Pages.Split.SplitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fabolus.Wpf.Pages.Split"
             mc:Ignorable="d" 
             d:DesignWidth="200">
    <StackPanel Orientation="Vertical">
        <Label Content="seperate distance (mm)" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>

        <Slider Value="{Binding SeperationDistance, Mode=TwoWay}"
                Minimum="0.02" Maximum="1.0" 
                TickFrequency="0.02" 
                TickPlacement="TopLeft" 
                AutoToolTipPlacement="TopLeft"
                AutoToolTipPrecision="2"
                IsSnapToTickEnabled="True" 
                Height="30"/>

        <Button Content="generate models" 
                Style="{DynamicResource MahApps.Styles.Button.Square}"
                Height="30"
                HorizontalAlignment="Stretch"
                FontSize="14" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"
                Command="{Binding GenerateCommand}" />
        
        <Button Content="export models" 
                Style="{DynamicResource MahApps.Styles.Button.Square}"
                Height="30"
                HorizontalAlignment="Stretch"
                FontSize="14" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"
                Command="{Binding ExportSeperateCommand}" />

        <Button Content="export joined models" 
                Style="{DynamicResource MahApps.Styles.Button.Square}"
                Height="30"
                HorizontalAlignment="Stretch"
                FontSize="14" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"
                Command="{Binding ExportJoinedCommand}" />
        
    </StackPanel>
</UserControl>
