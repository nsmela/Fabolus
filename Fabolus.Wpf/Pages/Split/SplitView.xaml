<UserControl x:Class="Fabolus.Wpf.Pages.Split.SplitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:common="clr-namespace:Fabolus.Wpf.Common"
             common:DataContextDisposal.AutoDispose="True"
             xmlns:local="clr-namespace:Fabolus.Wpf.Pages.Split"
             mc:Ignorable="d" 
             d:DesignWidth="200">

    <UserControl.DataContext>
        <local:SplitViewModel />
    </UserControl.DataContext>

    <StackPanel Orientation="Vertical">
        
        <Label Content="seperate distance (mm)" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>
        <Slider Value="{Binding GapDistance, Mode=TwoWay}" 
                Minimum="0.0"
                Maximum="0.5"
                TickFrequency="0.05"
                IsSnapToTickEnabled="True"
                AutoToolTipPlacement="TopLeft"
                AutoToolTipPrecision="2"
                Margin="2"/>

        <Label Content="draft tolerance (degrees)" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>
        <Slider Value="{Binding DraftTolerance, Mode=TwoWay}" 
                Minimum="0.0"
                Maximum="45.0"
                TickFrequency="5.0"
                IsSnapToTickEnabled="True"
                AutoToolTipPlacement="TopLeft"
                AutoToolTipPrecision="1"
                Margin="2"/>

        <Label Content="inner distance (mm)" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>
        <Slider Value="{Binding InnerDistance, Mode=TwoWay}" 
                Minimum="0.0"
                Maximum="5.0"
                SmallChange="0.1"
                AutoToolTipPlacement="TopLeft"
                AutoToolTipPrecision="1"
                Margin="2"/>

        <!-- Toggle view buttons -->
        <Separator Margin="0,8,0,8" />
        <Label Content="visual modes" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Label Content="bolus" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>
            
            <mah:ToggleSwitch 
                    IsOn="{Binding ShowBolus, Mode=TwoWay}"
                    HorizontalContentAlignment="Right" />
            
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Label Content="mould" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>

            <mah:ToggleSwitch 
                    IsOn="{Binding ShowMould, Mode=TwoWay}"
                    HorizontalContentAlignment="Right" />

        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Label Content="parting line" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>

            <mah:ToggleSwitch 
                    IsOn="{Binding ShowPartingLine, Mode=TwoWay}"
                    HorizontalContentAlignment="Right" />

        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Label Content="parting mesh" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>

            <mah:ToggleSwitch 
                    IsOn="{Binding ShowPartingMesh, Mode=TwoWay}"
                    HorizontalContentAlignment="Right" />

        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Label Content="negative parting" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>

            <mah:ToggleSwitch 
                    IsOn="{Binding ShowNegativeParting, Mode=TwoWay}"
                    HorizontalContentAlignment="Right" />

        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Label Content="positive parting " 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>

            <mah:ToggleSwitch 
                    IsOn="{Binding ShowPositiveParting, Mode=TwoWay}" 
                    HorizontalContentAlignment="Right" />

        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Label Content="spread out parts" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>

            <mah:ToggleSwitch 
                    IsOn="{Binding ExplodePartingMeshes, Mode=TwoWay}" 
                    HorizontalContentAlignment="Right" />

        </StackPanel>

        <Button Content="generate models" 
                Style="{DynamicResource MahApps.Styles.Button.Square}"
                Height="30"
                HorizontalAlignment="Stretch"
                FontSize="14" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"
                Command="{Binding GenerateCommand}" />

        <Label Content="exports" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="12" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"/>

        <!-- Export buttons -->
        <Button Content="parting mesh" 
                Style="{DynamicResource MahApps.Styles.Button.Square}"
                Height="30"
                HorizontalAlignment="Stretch"
                FontSize="14" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"
                Command="{Binding ExportCuttingMeshCommand}" />
        
        <Button Content="seperate models" 
                Style="{DynamicResource MahApps.Styles.Button.Square}"
                Height="30"
                HorizontalAlignment="Stretch"
                FontSize="14" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"
                Command="{Binding ExportSeperateCommand}" />

        <Button Content="models together" 
                Style="{DynamicResource MahApps.Styles.Button.Square}"
                Height="30"
                HorizontalAlignment="Stretch"
                FontSize="14" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"
                Command="{Binding ExportJoinedCommand}" />
        
    </StackPanel>
</UserControl>
