<UserControl x:Class="Fabolus.Wpf.Pages.MainWindow.MeshInfo.MeshInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fabolus.Wpf.Pages.MainWindow.MeshInfo"
             mc:Ignorable="d" >
    <GroupBox  x:Name="view"
            Header="Mesh Info" 
            BorderBrush="Black" 
            Background="White" 
            BorderThickness="2"
            Margin="0,8,10,0" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            >
        <StackPanel Orientation="Vertical" Width="140" MinWidth="140" MaxWidth="200" >
            <Label Content="File Name" Margin="0,-8,0,0"/>
            <Label Content="{Binding FileName}" Margin="10,-8,0,0"/>
            <Label Content="Volume(s)" Margin="0,-8,0,0"/>
            <Label Content="{Binding VolumeText}" Margin="10,-8,0,0"/>
        </StackPanel>
    </GroupBox>
</UserControl>
