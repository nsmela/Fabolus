<UserControl x:Class="Fabolus.Wpf.Pages.Channels.Path.PathChannelsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fabolus.Wpf.Pages.Channels.Path"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <StackPanel Orientation="Vertical">
        <Label Content="penetration depth" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            FontSize="12" 
            FontWeight="Bold"
            FontFamily="\Fonts\#Poppins"/>
        <Slider Value="{Binding Depth, Mode=TwoWay}"
            Minimum=".25" Maximum="4.0" 
            TickFrequency="0.25" 
            TickPlacement="TopLeft" 
            AutoToolTipPlacement="TopLeft"
            AutoToolTipPrecision="2"
            IsSnapToTickEnabled="True" 
            Height="30"/>
        <Label Content="lower diameter" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            FontSize="12" 
            FontWeight="Bold"
            FontFamily="\Fonts\#Poppins"/>
        <Slider Value="{Binding LowerDiameter, Mode=TwoWay}"
            Minimum="2.0" Maximum="12.0" 
            TickFrequency="1.0" 
            TickPlacement="TopLeft" 
            AutoToolTipPlacement="TopLeft"
            AutoToolTipPrecision="2"
            IsSnapToTickEnabled="True" 
            Height="30"/>
        <Label Content="upper diameter" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            FontSize="12" 
            FontWeight="Bold"
            FontFamily="\Fonts\#Poppins"/>
        <Slider Value="{Binding UpperDiameter, Mode=TwoWay}"
            Minimum="6.0" Maximum="20.0" 
            TickFrequency="2.0" 
            TickPlacement="TopLeft" 
            AutoToolTipPlacement="TopLeft"
            AutoToolTipPrecision="2"
            IsSnapToTickEnabled="True" 
            Height="30"/>
        <Label Content="lower height" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            FontSize="12" 
            FontWeight="Bold"
            FontFamily="\Fonts\#Poppins"/>
        <Slider Value="{Binding LowerHeight, Mode=TwoWay}"
            Minimum="2.0" Maximum="8.0" 
            TickFrequency="0.5" 
            TickPlacement="TopLeft" 
            AutoToolTipPlacement="TopLeft"
            AutoToolTipPrecision="2"
            IsSnapToTickEnabled="True" 
            Height="30"/>
        <Label Content="upper height" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            FontSize="12" 
            FontWeight="Bold"
            FontFamily="\Fonts\#Poppins"/>
        <Slider Value="{Binding UpperHeight, Mode=TwoWay}"
            Minimum="2.0" Maximum="8.0" 
            TickFrequency="0.5" 
            TickPlacement="TopLeft" 
            AutoToolTipPlacement="TopLeft"
            AutoToolTipPrecision="2"
            IsSnapToTickEnabled="True" 
            Height="30"/>
        <Button Content="Reset Path" 
                Height="30" Width="120"
                HorizontalAlignment="Stretch"
                FontSize="14" 
                FontWeight="Bold"
                FontFamily="\Fonts\#Poppins"
                Margin="2"
                Command="{Binding ClearPathPointsCommand}" />
    </StackPanel>
</UserControl>
