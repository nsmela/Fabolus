<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <PlatformTarget>x64</PlatformTarget>
	<PublishSingleFile>true</PublishSingleFile>
	<SelfContained>true</SelfContained>
    <PublishReadyToRun>true</PublishReadyToRun>
	<IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
	<StartupObject>Fabolus.Wpf.App</StartupObject>
	<ApplicationIcon>Fabolus icon resized.ico</ApplicationIcon>
	<AssemblyVersion>0.9.3</AssemblyVersion>
	<FileVersion>0.9.3</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="SplashScreen\SplashImage.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Fabolus icon resized.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="https:\github.com\nsmela\Fabolus" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.2" />
    <PackageReference Include="HelixToolkit.Wpf.SharpDX" Version="2.25.0" />
    <PackageReference Include="MahApps.Metro" Version="2.4.10" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Fabolus.Core\Fabolus.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="SplashScreen\SplashImage.png" />
  </ItemGroup>

</Project>
